# Frontend Environment Variables Template
# Copy this file to .env.local and fill in the actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# Authentication
# Show demo credentials on login page (true/false)
NEXT_PUBLIC_SHOW_DEMO_CREDENTIALS=false
# Custom help text displayed on login page
NEXT_PUBLIC_LOGIN_HELP_TEXT=Contact your administrator for credentials

# Feature Flags
# Enable payment gateway integration
NEXT_PUBLIC_PAYMENT_GATEWAY_ENABLED=true
# Enable file upload functionality
NEXT_PUBLIC_FILE_UPLOAD_ENABLED=true
# Enable activity logging
NEXT_PUBLIC_ACTIVITY_LOGGING_ENABLED=true
# Enable dashboard analytics
NEXT_PUBLIC_DASHBOARD_ANALYTICS_ENABLED=true

# UI Configuration
# Theme: light, dark, auto
NEXT_PUBLIC_THEME=light
# Items per page for lists
NEXT_PUBLIC_ITEMS_PER_PAGE=10
# Date format: DD/MM/YYYY, MM/DD/YYYY, YYYY-MM-DD
NEXT_PUBLIC_DATE_FORMAT=DD/MM/YYYY

# Application Info
NEXT_PUBLIC_APP_VERSION=1.0.0

# Razorpay Configuration (if using payment gateway)
# NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_here
